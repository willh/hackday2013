<form id="postForm" action="/feedback" method='post'>
   <fieldset>
      <legend>Feedback</legend>
      <div class="row-fluid">
         <div class="span6 bottomMargin">
            <label>Date of incident</label>
            <input name="date" type="date" placeholder="" value="<%= params[:date] %>">
            <span class="help-block">Please enter the date the incident occured.</span>
         </div>
         <div class="span6">
            <label>Time of incident</label>
   <select name="time">
     <option value="morning">Morning</option>
     <option value="afternoon">Afternoon</option>
     <option value="evening">Evening</option>
     <option value="night">Night</option>
   </select>
   <span class="help-block">Please enter the time of the day the incident occured.</span>
         </div>
      </div>
      <div class="row-fluid">
      <div class="span6">
         <label>Location of incident</label>
         <input type="text" placeholder="">
         <span class="help-block">In which ward did this incident occur?</span>
      </div>
      <div class="span6">
      <legend>Incident Type</legend>
        <label class="radio">
          <input type="radio" class="launch-radio" name="optionsRadios[]" id="optionsRadios1" value="miscommunication" checked>
          <img class="launchIcon" src="/vendor/smiley_face.png"/>Tell us what made you feel safe whilst in our care!
        </label>
        <label class="radio">
          <input type="radio" class="launch-radio" name="optionsRadios[]" id="optionsRadios2" value="miscommunication">
          <img class="launchIcon" src="/vendor/miscommunication.png"/>Do you feel there was a miscommunication between you and our staff?
        </label>
        <label class="radio">
          <input type="radio" class="launch-radio" name="optionsRadios[]" id="optionsRadios2" value="drug-error">
          <img class="launchIcon" src="/vendor/syringe_icon.png"/>Do you feel that there was an issue with your medicine?
        </label>
        <div class="control-group">
          <div class="controls">
            <button type="submit" class="btn" style="margin-top:10px;" onclick="changeType(event)">Next</button>
          </div>
        </div>

   </fieldset>
</form>
<script>
   //called before the page is submitted. Turns the selected type into a string
   //and appends it to the form.
   function changeType(e)
   {
      var incidentType = "miscommunication";
      $('.launch-radio').each(function(){
        if ($(this).is(':checked')){
          incidentType = $(this).attr('value');
        }
      });

      $('<input type="hidden">').attr({
            name: 'type',
           value: incidentType,
        }).appendTo('#postForm');   
      $('#postForm').submit();
   }
</script>
